    "history": "^5.0.0",
    "i18next": "^21.6.14",
    "i18next-browser-languagedetector": "^6.1.4",
    "ramda": "^0.28.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.16.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
